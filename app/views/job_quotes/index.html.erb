<h1>Listing job_quotes</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>User</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_quotes.each do |job_quote| %>
      <tr>
        <td><%= job_quote.job %></td>
        <td><%= job_quote.user %></td>
        <td><%= job_quote.price %></td>
        <td><%= link_to 'Show', job_quote %></td>
        <td><%= link_to 'Edit', edit_job_quote_path(job_quote) %></td>
        <td><%= link_to 'Destroy', job_quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job quote', new_job_quote_path %>
